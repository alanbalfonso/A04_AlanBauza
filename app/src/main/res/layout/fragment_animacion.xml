<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="20sp"
        android:text="Películas de animación"
        android:layout_marginTop="0dp"/>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:columnCount="2"
        android:rowCount="2">

        <!-- Película 1 -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:padding="8dp"
            android:gravity="center_horizontal">
            <ImageView
                android:id="@+id/img_pelicula1"
                android:layout_width="150dp"
                android:layout_height="200dp"
                android:src="@drawable/pinocho"
                android:scaleType="centerCrop"
                android:layout_gravity="center_horizontal"/>
            <TextView android:text="Pinocho de Guillermo del Toro" android:textStyle="bold" android:layout_height="35dp"
                android:layout_width="150dp" />
            <TextView android:text="Año: 2022" android:layout_height="20dp"
                android:layout_width="150dp"/>
            <TextView android:text="Director: Guillermo del Toro" android:layout_height="35dp"
                android:layout_width="150dp"/>
        </LinearLayout>

        <!-- Película 2 -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:padding="8dp"
            android:gravity="center_horizontal">
            <ImageView
                android:id="@+id/img_pelicula2"
                android:layout_width="150dp"
                android:layout_height="200dp"
                android:src="@drawable/cars"
                android:scaleType="centerCrop"
                android:layout_gravity="center_horizontal"/>
            <TextView android:text="Cars" android:textStyle="bold" android:layout_height="20dp"
                android:layout_width="150dp" />
            <TextView android:text="Año: 2006" android:layout_height="20dp"
                android:layout_width="150dp"/>
            <TextView android:text="Director: John Lasseter" android:layout_height="40dp"
                android:layout_width="150dp"/>
        </LinearLayout>

        <!-- Película 3 -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:padding="8dp"
            android:gravity="center_horizontal">
            <ImageView
                android:id="@+id/img_pelicula3"
                android:layout_width="150dp"
                android:layout_height="200dp"
                android:src="@drawable/shrek_2"
                android:scaleType="centerCrop"
                android:layout_gravity="center_horizontal"/>
            <TextView android:text="Shrek 2" android:textStyle="bold" android:layout_height="20dp"
                android:layout_width="150dp" />
            <TextView android:text="Año: 2004" android:layout_height="20dp"
                android:layout_width="150dp"/>
            <TextView android:text="Directores: Andrew Adamson, kelly Asbury y Conrad Vernon" android:layout_height="50dp"
                android:layout_width="150dp"/>
        </LinearLayout>

        <!-- Película 4 -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:padding="8dp"
            android:gravity="center_horizontal">
            <ImageView
                android:id="@+id/img_pelicula4"
                android:layout_width="150dp"
                android:layout_height="200dp"
                android:src="@drawable/lego_movie"
                android:scaleType="centerCrop"
                android:layout_gravity="center_horizontal"/>
            <TextView android:text="Una película de LEGO" android:textStyle="bold" android:layout_height="20dp"
                android:layout_width="150dp" />
            <TextView android:text="Año: 2014" android:layout_height="20dp"
                android:layout_width="150dp"/>
            <TextView android:text="Director: Phil Lord y Christopher Miller" android:layout_height="40dp"
                android:layout_width="150dp"/>
        </LinearLayout>
    </GridLayout>
</LinearLayout>